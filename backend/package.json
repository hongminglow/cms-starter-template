  "scripts": {
    "build": "nest build base-system",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name auto",
    "prisma:update": "prisma migrate dev --name auto && prisma generate",
    "prisma:studio": "prisma studio",
    "start": "nest start base-system",
    "start:dev": "cross-env NODE_ENV=development nest start base-system --watch",
    "start:dev:demo": "cross-env NODE_ENV=development nest start base-demo --watch",
    "start:debug": "cross-env NODE_ENV=development nest start base-system --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/apps/base-system/src/main",
    "pm2:start:prod": "cross-env NODE_ENV=production pm2 start ecosystem.config.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" \"libs/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/base-system/test/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.3",
    "@fastify/csrf-protection": "7.1.0",
    "@fastify/helmet": "13.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "8.2.0",
    "@keyv/redis": "^4.4.1",
    "@nest-lab/throttler-storage-redis": "1.1.0",
    "@nestjs/axios": "4.0.0",
    "@nestjs/cache-manager": "3.0.1",
    "@nestjs/common": "11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "11.1.3",
    "@nestjs/cqrs": "11.0.3",
    "@nestjs/event-emitter": "3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "11.1.3",
    "@nestjs/schedule": "6.0.0",
    "@nestjs/swagger": "11.2.0",
    "@nestjs/terminus": "11.0.0",
    "@nestjs/throttler": "6.4.0",
    "@prisma/client": "^6.10.1",
    "ali-oss": "6.23.0",
    "bcryptjs": "3.0.2",
    "cache-manager": "^7.0.0",
    "casbin": "^5.38.0",
    "class-transformer": "^0.5.1",
    "class-validator": "0.14.2",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.4.0",
    "ioredis": "^5.6.1",
    "js-yaml": "^4.1.0",
    "keyv": "^5.3.4",
    "nest-winston": "1.10.2",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "^7.8.2",
    "systeminformation": "^5.27.6",
    "ulid": "3.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "11.1.3",
    "@types/ali-oss": "^6.16.11",
    "@types/cache-manager": "4.0.6",
    "@types/crypto-js": "4.2.2",
    "@types/gradient-string": "1.1.6",
    "@types/jest": "30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "24.0.4",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "chalk": "^4.1.2",
    "cross-env": "7.0.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "4.4.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.0",
    "gradient-string": "^2.0.1",
    "jest": "30.0.3",
    "prettier": "^3.6.1",
    "prisma": "^6.10.1",
    "source-map-support": "0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/$1",
      "@config/(.*)": "<rootDir>/config/$1",
      "@lib/(.*)": "<rootDir>/lib/$1",
      "@tests/(.*)": "tests/$1",
      "^@lib/bootstrap(|/.*)$": "<rootDir>/libs/bootstrap/src/$1",
      "^@lib/utils(|/.*)$": "<rootDir>/libs/utils/src/$1",
      "^@lib/typings(|/.*)$": "<rootDir>/libs/typings/src/$1",
      "^@lib/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
      "^@lib/global(|/.*)$": "<rootDir>/libs/global/src/$1",
      "^@lib/constants(|/.*)$": "<rootDir>/libs/constants/src/$1",
      "^@lib/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@lib/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
      "^@lib/shared/redis(|/.*)$": "<rootDir>/libs/shared/redis/src/$1",
      "^@lib/shared/prisma(|/.*)$": "<rootDir>/libs/shared/prisma/src/$1",
      "^@lib/shared/oss(|/.*)$": "<rootDir>/libs/shared/oss/src/$1",
      "^@lib/shared/ip2region(|/.*)$": "<rootDir>/libs/shared/ip2region/src/$1",
      "^@lib/shared/errors(|/.*)$": "<rootDir>/libs/shared/errors/src/$1",
      "^@lib/infra/adapter(|/.*)$": "<rootDir>/libs/infra/adapter/src/$1",
      "^@lib/infra/casbin(|/.*)$": "<rootDir>/libs/infra/casbin/src/$1",
      "^@lib/infra/decorators(|/.*)$": "<rootDir>/libs/infra/decorators/src/$1",
      "^@lib/infra/filters(|/.*)$": "<rootDir>/libs/infra/filters/src/$1",
      "^@lib/infra/guard(|/.*)$": "<rootDir>/libs/infra/guard/src/$1",
      "^@lib/infra/interceptors(|/.*)$": "<rootDir>/libs/infra/interceptors/src/$1",
      "^@lib/infra/rest(|/.*)$": "<rootDir>/libs/infra/rest/src/$1",
      "^@lib/infra/strategies(|/.*)$": "<rootDir>/libs/infra/strategies/src/$1",
      "^@lib/infra/crypto(|/.*)$": "<rootDir>/libs/infra/crypto/src/$1"
    },
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ]
  },
  "prisma": {
    "seed": "ts-node -r tsconfig-paths/register prisma/seeds"
  }
}
